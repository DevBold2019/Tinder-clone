<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="5dp"
        android:src="@drawable/orite"
        android:padding="2dp"
        android:id="@+id/senderMessageImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="200"
        android:maxLines="20"
        android:layout_margin="10dp"
        android:id="@+id/sender_Name"
        android:maxHeight="300dp"
        android:gravity="start"
        android:text="Meggy"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/senderMessageImage"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="200"
        android:maxLines="20"
        android:background="@drawable/received_bg"
        android:layout_margin="15dp"
        android:id="@+id/senderTextMessage"
        android:maxHeight="300dp"
        android:gravity="start"
        android:textSize="15dp"
        android:text="Hi Amos"
        app:layout_constraintTop_toBottomOf="@+id/senderMessageImage"
        app:layout_constraintLeft_toRightOf="@+id/senderMessageImage"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="200"
        android:maxLines="20"
        android:layout_margin="3dp"
        android:id="@+id/senderTextReceivedTime"
        android:maxHeight="300dp"
        android:gravity="start"
        android:text="11:00 am"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/senderTextMessage"
        app:layout_constraintLeft_toRightOf="@+id/senderTextMessage"
        android:padding="10dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>