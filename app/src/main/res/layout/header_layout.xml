<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/lovelog"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/myProfilePic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="5dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/orite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myName"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:text="Meggy"
        app:layout_constraintTop_toBottomOf="@+id/myProfilePic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"


        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_margin="30dp"
        android:id="@+id/takeMeToEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_settings_black_24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_edit_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/takeMeToEdit"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/descriptor"
        android:layout_margin="30dp"
        android:padding="8dp"
        android:textColor="#fff"
        android:text="Settings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/takeMeToEdit"
      app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"
        android:textColor="#fff"
        android:padding="8dp"
        android:text="Edit"/>

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/descriptor"
        android:layout_margin="20dp"
        android:background="@color/colorAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
